{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "outDir": "dist/main",
        "rootDir": "main"
    },
    "include": [
        "main/**/*"
    ]
}